@model BlogWebUI.Models.tblKategori
@{
    ViewBag.Title = "KategoriDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h3><i>Kategori Duzenle</i></h3>
    <hr />

    @using (Html.BeginForm("KategoriDuzenle", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <form>
            <div class="form-group">
                <label>Kategori Başlık</label>
                @Html.TextBoxFor(x => x.tblKategoriBaslik, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Kategori İçerik</label>
                @Html.TextBoxFor(x => x.tblKategoriIcerik, new { @class = "form-control" })
            </div>
            <button class="btn btn-outline-primary">Düzenle</button>
        </form>
    }

</div>


