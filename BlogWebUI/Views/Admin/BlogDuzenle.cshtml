@model BlogWebUI.Models.tblGonderi
@{
    ViewBag.Title = "BlogDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<div class="container-fluid">
    <h3><i>Blog Yazısını Düzenle</i></h3>
    <hr />

    @using (Html.BeginForm("BlogDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();


        <div class="row">
            <div class="col-8">
                <div class="form-group">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.gonderiBaslik, new { @class = "form-control" })
                    </div>
                    <label>Blog Yazısı</label>
                    @Html.TextAreaFor(x => x.gonderiIcerik, new {@class = "ckeditor"})
                    @*<textarea name="gonderiIcerik" class="ckeditor"></textarea>*@
                </div>
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input required type="file" class="form-control " name="gonderiOzet" placeholder="800x500 En Uygun Formattır" accept=".jpg,.png.,.jpeg" />
                </div>  
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownList("gonderiKategoriId", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Etiket</label>
                    @Html.DropDownList("gonderiEtiketId", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Yayınlanma Tarihi</label>
                    @*<input class="form-control date-picker" placeholder="Select Date" type="text" value="gonderiYayinlanmaTarihi">*@
                    @Html.TextBoxFor(x => x.gonderiYayinlanmaTarihi, new { @class = "form-control date-picker" })
                </div>
                <div class="form-group">
                    <label>Gönderen Kişi</label>
                    @Html.DropDownList("gonderiKullaniciId", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rol</label>
                    @Html.DropDownList("gonderiKullaniciAdminId", null, new { @class = "form-control" })
                </div>
                <button class="btn btn-primary">Düzenle</button>
            </div>
        </div>







    }

</div>

